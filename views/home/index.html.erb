<div class="landing-video">
	<%= video_tag("landing-video.mp4",controls: true, muted:true,autobuffer: true,id: "landingVideo") %>
</div>

<script type="text/javascript">
	var vid = document.getElementById("landingVideo");
	<% if(@videoViewed) %>
		setTimeout(function(){
			$(".landing-video").fadeIn(callback = function(){
				vid.play();
				$.ajax({
					type: "POST",
					url: "home/videoViewed"
				})
			});
		},2000);
	<% end %>
	vid.onended = function(){
		$(".landing-video").fadeOut();
	};
	$(".landing-video").click(function(){
		vid.pause();
		$(".landing-video").fadeOut();
	});
	$(".landing-video video").click(function(){
		event.stopPropagation();
	});
</script>