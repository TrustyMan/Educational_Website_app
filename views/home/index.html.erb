<div class="home-body">
	<div class="home-container">
		<div class="home-title">
			<%= image_tag "landing-title.png" , :class => "home-title-text" %>	
			<%= image_tag "group.png" , :class => "home-img-landing" %>	
		</div>
		<div class="home-btn-group">
			<button class="btn-home btn-green">1. The Income Statement</button>
			<button class="btn-home btn-yellow">2. Assets</button>
			<button class="btn-home btn-pink">3. Liabilities</button>
			<button class="btn-home btn-red">4. Owners' Equity</button>
			<button class="btn-home btn-blue">5. Debits and Credits</button>
		</div>
		<div class="footer">
			<p class="home-footer">Created by </p>
			<a href="mailto:jameson@accountingconquest.com">Jameson Galey, CPA, CMA</a>
		</div>
	</div>
	<div class="landing-video">
		<iframe src="https://cdn.jwplayer.com/players/oOR6NJwe-BGOAXuhU.html" width="100%" height="100%" frameborder="0" scrolling="auto" allowfullscreen></iframe>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		if($(".home-container").height()>$(".home-body").height())
			$(".home-body").height($(".home-container").height());
		$(window).resize(function(){
			$(".home-body").css('height','100vh');
			if($(".home-container").height()>$(".home-body").height())
			{
				$(".home-body").height($(".home-container").height());
			}
		});
	});
	var vid = $("video")[0];
	<% if(@videoViewed) %>
		setTimeout(function(){
			$(".landing-video").fadeIn(callback = function(){
				$.ajax({
					type: "POST",
					url: "home/videoViewed"
				})
			});
		},2000);
	<% end %>
	$(".landing-video").click(function(){
		$(".landing-video").fadeOut();
		$(".landing-video").html("");
	});
	$(".landing-video video").click(function(){
		event.stopPropagation();
	});
</script>